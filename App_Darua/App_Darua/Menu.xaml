<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Darua.Menu" Title="Opções de Escolha">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Menu" />
            <Button x:Name="btnVoltar" Text="Voltar"
                    HorizontalOptions="Start"                   
                    Clicked="OnButtonClicked" />

            <Button x:Name="btnOpcao1" Text="ILUMINAÇÃO"
                    HorizontalOptions="Center"
                    Clicked="OnButtonOpcao1"
                    BackgroundColor="Aqua"
                     />

            <Button x:Name="btnOpcao2" Text="ESTRADAS"
                    HorizontalOptions="Center"
                    Clicked="OnButtonOpcao2"
                    BackgroundColor="Aqua"
                    />

            <Button x:Name="btnOpcao3" Text="SANEAMENTO"
                    HorizontalOptions="Center"
                    Clicked="OnButtonOpcao3"
                    BackgroundColor="CornflowerBlue"
                    FontAttributes="Bold"
                     />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>