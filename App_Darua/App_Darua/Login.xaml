<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Darua.Login" Title="DARUA">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Aquamarine">
            <Label Text="USUARIO" />
            <Entry x:Name="edtLogin" Placeholder="Digite Login"/>

            <Label Text="SENHA" />
            <Entry x:Name="edtSenha" Placeholder="Digite Senha"/>
            
            <Button x:Name="btnLogin" Text="LOGIN!" Clicked="OnButtonClicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>